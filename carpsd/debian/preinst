#!/bin/sh
# preinst script for carpsd
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)

    # Create a user for the daemon to run under.
    # See http://www.debian.org/doc/manuals/securing-debian-howto/ch9.en.html

    # If the package has default file it could be sourced, so that
    # the local admin can overwrite the defaults
     
    [ -f "/etc/default/carpsd" ] && . /etc/default/carpsd

    # Sane defaults:

    [ -z "$PIDFILE" ] && PIDFILE=/var/run/carpsd.pid
    [ -z "$SERVER_USER" ] && SERVER_USER=carpsd
    [ -z "$SERVER_NAME" ] && SERVER_NAME="Carpcomm Station Daemon"
    [ -z "$SERVER_GROUP" ] && SERVER_GROUP=carpsd
     
    # Groups that the user will be added to.
    ADDGROUPS="dialout audio"
 
    # 1. create group if not existing
    if ! getent group | grep -q "^$SERVER_GROUP:" ; then
        echo -n "Adding group $SERVER_GROUP.."
        addgroup --quiet --system $SERVER_GROUP 2>/dev/null ||true
        echo "..done"
    fi

    # 3. create user if not existing
    if ! getent passwd | grep -q "^$SERVER_USER:"; then
        echo -n "Adding system user $SERVER_USER.."
        adduser --quiet \
            --system \
            --ingroup $SERVER_GROUP \
            --no-create-home \
            --disabled-password \
            $SERVER_USER 2>/dev/null || true
        echo "..done"
    fi

    # 4. adjust passwd entry
    usermod -c "$SERVER_NAME" \
        -g $SERVER_GROUP  \
        $SERVER_USER

    # 5. adjust file and directory permissions
    if ! dpkg-statoverride --list $PIDFILE >/dev/null
    then
	touch $PIDFILE
	chown $SERVER_USER:adm $PIDFILE
	chmod u=rwx,g=rwx,o= $PIDFILE
    fi

    # 6. Add the user to the ADDGROUPS groups
    for group in $ADDGROUPS
    do
	adduser $SERVER_USER $group
    done

    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0